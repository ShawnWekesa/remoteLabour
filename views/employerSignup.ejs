<%- include ("partials/header") -%> 
<div class="ui main text container segment">
    <div class="ui huge header">Register as an Employer</div>
    <a href="http://localhost:2000/api/employer/login">Already have an account? login</a>

    <form class="ui form" action="signup" method="POST">
        
        <div class="field">
            <label for="Name">Name</label>
           <input type="text" name="name" placeholder="name">
        </div>

        <div class="field">
            <label for="Email">Email</label>
           <input type="email" name="email" placeholder="email">
        </div>

        <div class="field">
            <label for="Password">Password</label>
            <input type="password" name="password" placeholder="password">
        </div>

        <div class="field">
            <label for="Address">Address</label>
           <input type="text" name="address" placeholder="address">
        </div>
        <div class="field">
            <label for="Gender">Gender</label>
           <input type="text" name="gender" placeholder="male or female">
        </div>

        <div class="field">
            <label for="Number">Phone number</label>
           <input type="tel" name="number" placeholder="phone number">
        </div>

        <input class="ui primary big button" type="submit">
      
    </form>
</div>
<%- include ("partials/footer") -%> 